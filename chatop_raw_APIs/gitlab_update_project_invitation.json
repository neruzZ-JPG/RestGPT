{
    "openapi": "3.0.0",
    "info": {
        "title": "GitlabInvitationsApi",
        "version": "1.0.0",
        "description": "The Gitlab Invitations API enables users to manage project invitations. It allows sending invitations to projects with specific access levels defined. Also, it provides the functionality to update a pending invitation's access level or access expiry date. Users can specify details like the project ID, email address of the invitee, and optionally set the access level and expiry date for the invitation."
    },
    "paths": {
        "https://gitlab.com/api/v4/projects/{id}/invitations/{email}": {
            "put": {
                "operationId": "updateProjectInvitation",
                "summary": "Updates a pending invitation's access level or access expiry date for a project.",
                "description": "This endpoint updates a pending invitation's access level or access expiry date for a given project. The user needs to provide the project ID and the email address the invitation was previously sent to. Optionally, the access level and expiry date can be set.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID or URL-encoded path of the project. Required.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    },
                    {
                        "name": "email",
                        "in": "path",
                        "description": "The email address the invitation was previously sent to. Required.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "access_level",
                        "in": "query",
                        "description": "A valid access level (defaults: 30, the Developer role). Optional.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "enum": [
                                0,
                                5,
                                10,
                                15,
                                20,
                                30,
                                40,
                                50
                            ]
                        }
                    },
                    {
                        "name": "expires_at",
                        "in": "query",
                        "description": "A date string in ISO 8601 format (YYYY-MM-DDTHH:MM:SSZ). Optional.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful update of the invitation.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "expires_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "access_level": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request. Check the input parameters."
                    },
                    "401": {
                        "description": "Unauthorized. Check your access token."
                    },
                    "404": {
                        "description": "Project or invitation not found."
                    }
                }
            }
        }
    }
}