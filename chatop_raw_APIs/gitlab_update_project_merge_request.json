{
    "openapi": "3.0.0",
    "info": {
        "title": "UpdateMergeRequest API",
        "version": "1.0.0",
        "description": "The Update Merge Request API enables the modification of an existing merge request. You can change various attributes like the target branch, title, assign or unassign assignees, manage labels, lock or unlock discussions, and more. It requires specific project and merge request IDs and allows for customizing the merge request's details according to your needs."
    },
    "paths": {
        "https://gitlab.com/api/v4/projects/{id}/merge_requests/{merge_request_iid}": {
            "put": {
                "operationId": "updateMergeRequest",
                "summary": "Updates an existing merge request with specified attributes.",
                "description": "This endpoint allows you to update an existing merge request by providing various optional and required attributes. You must include at least one non-required attribute in the request.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID or URL-encoded path of the project. This is a required parameter.",
                        "required": true,
                        "schema": {
                            "oneOf": [
                                {
                                    "type": "integer"
                                },
                                {
                                    "type": "string"
                                }
                            ]
                        }
                    },
                    {
                        "name": "merge_request_iid",
                        "in": "path",
                        "description": "The ID of a merge request. This is a required parameter.",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "add_labels",
                        "in": "query",
                        "description": "Comma-separated label names to add to a merge request. If a label does not already exist, this creates a new project label and assigns it to the merge request. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "allow_collaboration",
                        "in": "query",
                        "description": "Allow commits from members who can merge to the target branch. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "allow_maintainer_to_push",
                        "in": "query",
                        "description": "Alias of allow_collaboration. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "assignee_id",
                        "in": "query",
                        "description": "The ID of the user to assign the merge request to. Set to 0 or provide an empty value to unassign all assignees. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "assignee_ids",
                        "in": "query",
                        "description": "The ID of the users to assign the merge request to. Set to 0 or provide an empty value to unassign all assignees. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            }
                        }
                    },
                    {
                        "name": "description",
                        "in": "query",
                        "description": "Description of the merge request. Limited to 1,048,576 characters. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "discussion_locked",
                        "in": "query",
                        "description": "Flag indicating if the merge request\u2019s discussion is locked. Only project members can add, edit or resolve comments to locked discussions. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "labels",
                        "in": "query",
                        "description": "Comma-separated label names for a merge request. Set to an empty string to unassign all labels. If a label does not already exist, this creates a new project label and assigns it to the merge request. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "milestone_id",
                        "in": "query",
                        "description": "The global ID of a milestone to assign the merge request to. Set to 0 or provide an empty value to unassign a milestone. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "remove_labels",
                        "in": "query",
                        "description": "Comma-separated label names to remove from a merge request. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "remove_source_branch",
                        "in": "query",
                        "description": "Flag indicating if a merge request should remove the source branch when merging. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "reviewer_ids",
                        "in": "query",
                        "description": "The ID of the users set as a reviewer to the merge request. Set the value to 0 or provide an empty value to unset all reviewers. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            }
                        }
                    },
                    {
                        "name": "squash",
                        "in": "query",
                        "description": "If true, squash all commits into a single commit on merge. Project settings might override this value. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "state_event",
                        "in": "query",
                        "description": "New state (close/reopen). This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "target_branch",
                        "in": "query",
