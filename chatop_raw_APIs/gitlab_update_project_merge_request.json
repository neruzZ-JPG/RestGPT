                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "title",
                        "in": "query",
                        "description": "Title of MR. This is an optional parameter.",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
